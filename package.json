    "dotenv": "^16.3.1",
    "fastify": "^4.19.2",
    "graphql": "^16.7.1",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^2.0.0-beta.2",
    "typedi": "^0.10.0",
