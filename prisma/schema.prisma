// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  email      String       @unique
  name       String
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  categories Category[]
  CreditCard CreditCard[]
  Expense    Expense[]
}

model Category {
  id        String       @id @default(uuid())
  name      String
  color     String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  type      CategoryType
  User      User?        @relation(fields: [userId], references: [id])
  userId    String?
  Expense   Expense[]
}

enum CategoryType {
  INCOME
  EXPENSE
}

model CreditCard {
  id         String    @id @default(uuid())
  name       String
  color      String
  limit      Float
  dueDay     Int
  closingDay Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  User       User?     @relation(fields: [userId], references: [id])
  userId     String?
  Expense    Expense[]
}

model Expense {
  id           String      @id @default(uuid())
  name         String
  value        Float
  date         DateTime
  paid         Boolean
  ignore       Boolean
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  category     Category    @relation(fields: [categoryId], references: [id])
  categoryId   String
  creditCard   CreditCard? @relation(fields: [creditCardId], references: [id])
  creditCardId String?
  User         User?       @relation(fields: [userId], references: [id])
  userId       String?
}
